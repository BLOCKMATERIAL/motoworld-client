@font-face
  font-family PrimaryArial
  font-style normal
  src url(../assets/font/primary-arial.TTF)

@font-face
  font-family SecondaryColumbia
  font-style normal
  src url(../assets/font/secondary-columbia.otf)


primary-dark-color = #4E4E4E
primary-grey-color = #F5F5F5

primary-color = #FFFFFF
accent-color = #FFFFFF

primary-text-color = #B00000
secondary-text-color = primary-dark-color

.app
  display flex
  flex-direction column
  width 100%
  height 100%
  font-size 1.2em
  font-family SecondaryColumbia

  .header {
    flex 2
    display flex
    background primary-dark-color
  }

  .body-element {
    flex 15
    background primary-color
    position relative

    .body-background, .body-foreground {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }

    .body-background {
      display flex
      flex-direction column

      .body-header {
        height 30%
        background primary-grey-color
        position relative
        display inline-block

        overflow hidden

        > img {
          display: block
          height 100%
          float right
          margin 8px -100px 8px 0px
        }
      }
    }

    .body-foreground {
      z-index 10
      display  flex
      flex-direction column

      .app-header {
        margin 0 auto
        min-width 30%
        display flex
        flex-direction column

        .title {
          color primary-text-color
          font-size 1.44em
          margin-top 40px
        }

        .sub-title {
          color secondary-text-color
        }

        .opportunities-tab {
          width 100%
          min-height 100px
          margin-top 40px
          background primary-color
          border-style solid
          border-color primary-grey-color
          border-width 1px
        }
      }

      .content-block {
        flex 1
        width 100%
        display block
      }
    }
  }

  .footer {
    flex 1
    background primary-grey-color
  }
