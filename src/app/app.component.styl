@font-face
  font-family PrimaryArial
  font-style normal
  src url(../assets/font/primary-arial.TTF)

@font-face
  font-family SecondaryColumbia
  font-style normal
  src url(../assets/font/secondary-columbia.otf)

primary-dark-color = #4E4E4E
primary-grey-color = #F5F5F5

primary-color = #FFFFFF
accent-color = #FFFFFF

primary-text-color = #B00000
secondary-text-color = primary-dark-color


.app
  font-family SecondaryColumbia
  .navbar
    display:flex
    justify-content: space-between
    flex-wrap: wrap
    background: primary-dark-color

    .logo
      max-width: 100px
      img
        width: 100%
        height: auto
    ul
      display:flex
      justify-content: space-between
      list-style-type: none
      li
        margin-top:30px
        padding:0 20px
        a
          text-decoration: none
          color: white
    .btn-admin
      padding-top:50px
      color white
    .logout
      width: 40px
      padding-top:40px
      img
          width: 80%
          heigh: auto


  .header
    background: primary-grey-color    
    background-image: url('../assets/image/motoracer.png')
    background-size: contain
    background-position: top right
    background-repeat: no-repeat
    
    margin-bottom: 50px
    .banner
      max-width:700px;
      margin: auto
      h1
        color:primary-text-color
        font-size:48px
        margin:0
        padding-top:20px
        text-shadow: 0 3px 8px rgba(0,0,0,0.7)
      p
        font-size:36px
        text-shadow: 0 3px 8px rgba(0,0,0,0.7)

      img
         width: 100%
         height: auto
         margin-bottom: -20px
  footer
    background: primary-grey-color    
    text-align: center
    padding: 20px 0
    margin-top:30px
    span
      color: primary-text-color

