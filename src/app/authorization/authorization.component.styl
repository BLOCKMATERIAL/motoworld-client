primary-dark-color = #4E4E4E
primary-grey-color = #F5F5F5

primary-color = #FFFFFF
accent-color = #FFFFFF

primary-text-color = #B00000
secondary-text-color = primary-dark-color

.content {
  margin 0 auto
  height 100%
  width 40%
  display flex
  flex-direction column

  > form {
    display inline-flex
    flex-direction column
    margin 10px 30px
    padding 40px 20px
    background primary-grey-color

    #form-title {
      alignment center
    }

    .field {
      margin-top 8px
      margin-bottom 8px
      border-style solid
      border-color #999999
      border-width 3px
      background #EAEAEA
      padding 6px 3px
      font-size 0.9em
      font-family SecondaryColumbia
    }

    #authorize-via-services-title {
      margin 16px 0px
    }

    .buttons {
      margin-top 16px

      #checkbox-remember-me {
        float left
        border none
        margin auto 0
        vertical-align middle
      }

      #button-registration{
        float right
        border none
        background transparent
        font-size 0.9em
        margin auto 0
        font-family SecondaryColumbia
      }
    }

    #button-login{
      background primary-text-color
      color white
      padding 8px 70px
      margin 0px auto
      border none
      font-size 1.4em
      font-family SecondaryColumbia
    }
  }
}
