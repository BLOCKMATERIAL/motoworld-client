primary-dark-color = #4E4E4E
primary-grey-color = #F5F5F5

primary-color = #FFFFFF
accent-color = #FFFFFF

primary-text-color = #B00000
secondary-text-color = primary-dark-color

.container
    max-width: 1070px
    margin: auto;
    padding: 15px;

    h1
        font-size: 30px
    p
        font-size: 16px
        font-family: SecondaryColumbia
    .content
        display: flex
        flex-direction: row
        .image-area
            width: 50%
            text-align: center
            padding: 50px 0;
            background:primary-grey-color
            img
                width:300px;
        .action-area
            width:50%
            padding: 0 20px
            h1
                font-size: 30px
            table
                font-size: 18px
                border-collapse: collapse;
                td
                    border: 1px solid #ddd;
                    width: 200px
                    padding: 5px 5px
            button
                display:flex
                padding: 20px 30px
                margin-top:30px
                background: primary-text-color
                color: white
                border:none
                outline:none
                font-size: 20px
                font-family: SecondaryColumbia
                span
                    margin-top:10px
                img
                    width: 40px
                    height: auto
    article
        margin-left: 50px