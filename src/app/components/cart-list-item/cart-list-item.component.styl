primary-dark-color = #4E4E4E
primary-grey-color = #F5F5F5

primary-color = #FFFFFF
accent-color = #FFFFFF

primary-text-color = #B00000
secondary-text-color = primary-dark-color

.container
  max-width: 1070px
  margin: auto
  padding: 15px


  .item-list
    max-width: 700px
    margin: auto
    padding: 20px

    .item
      display:flex
      flex-direction: row

      .item-img
        width: 200px
        img
          width: 100%
          height:auto

      .description
        padding: 0 20px;
        background: primary-grey-color
        width: 500px
        .top-section
          display:flex
          justify-content: space-between
          a
            padding-top 20px
        .more-info
          margin: 10px 0
          padding: 5px 10px
          background: primary-text-color
          font-family SecondaryColumbia
          font-size 1em
          color: white
          border: none
          outline: none
    .plus-minus-input
      display:flex

      .input-group-button
        button
          background: black
          color: white
          padding: 5px 10px
          border:none
          outline: none

      .input-group-field
        text-align: center;
        width: 50px
        padding-left: 15px


















